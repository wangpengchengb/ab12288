.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* background-color: white; */
  padding-bottom: calc(env(safe-area-inset-bottom) / 2 + 10px);
  border-radius: 25px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  backdrop-filter: blur(20px);
}

.menu-title {
  font-size: 14px;
}

.menu-icon>i {
  color: #666;
  font-size: 24px;
}

.menu-item {
  font-size: 20px;
  padding-right: 10px;
}

.page__bd {
  margin-bottom: 100px;
}

.searchbox {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 100;
  background-color: #f5f5f5;
}

.more::before {
  border-top: none !important;
}