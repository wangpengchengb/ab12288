.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}

.menu-title {
  font-size: 14px;
}

.menu-icon>i {
  color: #666;
  font-size: 24px;
}

.menu-item {
  font-size: 20px;
  padding-right: 10px;
}

.page__bd {
  margin-bottom: 100px;
}

.searchbox {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 100;
  background-color: #f5f5f5;
}

.more::before {
  border-top: none !important;
}